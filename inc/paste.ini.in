[app:main]
use = egg:smrt

pyramid.reload_templates = ${config:debug}
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en
pyramid.includes = 
    pyramid_zodbconn
    pyramid_tm
    ${config:pyramid.includes}
tm.attempts = 3
zodbconn.uri = ${config:zodbconn.uri}

irc_host = ${config:irc_host}
irc_port = ${config:irc_port}
irc_bot_name = ${config:irc_bot_name}
irc_bot_nick = ${config:irc_bot_nick}
irc_channel = ${config:irc_channel}
csv_folder = ${config:csv_folder}

[server:main]
use = egg:waitress#main
host = ${config:hostname}
port = ${config:port}

[loggers]
keys = root, smrt

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = ${config:loglevel_root}
handlers = console

[logger_smrt]
level = ${config:loglevel_smrt}
handlers =
qualname = smrt

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s
