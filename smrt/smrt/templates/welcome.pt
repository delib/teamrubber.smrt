<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Simple Milestone Reporting Tool</h1>
            <br />
            <h2>Milestones</h2>
            <h5 tal:condition="not:exist">No milestones are currently configured. <a href="/add_milestone">Add one?</a></h5>
            <ul tal:condition="exist">
                <li tal:repeat="mile milestones"><a href="/${milestones[mile].short_name}">${milestones[mile].name}</a></li>
                <br />
                <li><a href="/add_milestone">Add Another Milestone</a></li>
            </ul>
        </div>
        
    </tal:block>
</tal:block>