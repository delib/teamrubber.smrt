<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Edit Project</h1>
            <br />
            <form class="form-horizontal" action="/${project.short_name}/edit?action=save" method="POST">
                
                <div class="control-group">
                    <label for="name" class="control-label">Project Name:</label>
                    <div class="controls">
                        <input type="text" name="name" id="name" placeholder="Project..." value="${project.name}" />
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="short_name" class="control-label">Project Short-name:</label>
                    <div class="controls">
                        <input type="text" name="short_name" id="short_name" placeholder="Short-name..." value="${project.short_name}" /><br />
                        <span class="help-block">
                            As displayed by PlanIO in the URL e.g. "https://SUBDOMAIN.plan.io/projects/SHORT-NAME/issues"
                        </span>
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="subdomain" class="control-label">Subdomain:</label>
                    <div class="controls">
                        <input type="text" name="subdomain" id="subdomain" placeholder="Subdomain..." value="${project.subdomain}" /><br />
                        <span class="help-block">
                            As displayed by PlanIO in the URL e.g. "https://SUBDOMAIN.plan.io/projects/SHORT-NAME/issues"
                        </span>
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="username" class="control-label">Login Username:</label>
                    <div class="controls">
                        <input type="text" name="username" id="username" placeholder="Username..." value="${project.username}" />
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="password" class="control-label">Login Password:</label>
                    <div class="controls">
                        <input type="password" name="password" id="password" placeholder="&bull;&bull;&bull;&bull;&bull;&bull;" />
                    </div>
                </div>
                
                <a href="/" class="btn btn-danger">Cancel</a>
                <button type="submit" value="submit" class="btn btn-primary pull-right">Save Changes</button>
                
            </form>
        </div>
        
    </tal:block>
</tal:block>