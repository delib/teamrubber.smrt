<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Project: ${project.title}</h1>
            <br />
            <h2>Milestones</h2>
            <h5 tal:condition="not:exist">No milestones are currently configured.</h5>
            <ul tal:condition="exist">
                <li tal:repeat="mile_key milestones">
                    <tal:block tal:define="milestone project.milestones[mile_key]">
                        <span class="label label-${['info','success'][milestone.status=='open']}">${milestone.status}</span>
                        <a href="/${project.__name__}/${milestone.__name__}">${milestone.title}</a>
                        <br /><span tal:replace="structure sparks[milestone.__name__]" />
                        <br /><br />
                    </tal:block>
                </li>
                <br />
            </ul>
        </div>
        
    </tal:block>
</tal:block>