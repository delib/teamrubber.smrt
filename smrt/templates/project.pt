<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Project: ${project.name}</h1>
            <br />
            <h2>Milestones</h2>
            <h5 tal:condition="not:exist">No milestones are currently configured. <a href="${addurl}">Add one?</a></h5>
            <ul tal:condition="exist">
                <li tal:repeat="mile_key project"><a tal:define="milestone project[mile_key]" href="/${project.short_name}/${milestone.short_name}">${milestone.name}</a></li>
                <br />
                <li><a href="${addurl}">Add Another Milestone</a></li>
            </ul>
        </div>
        
    </tal:block>
</tal:block>