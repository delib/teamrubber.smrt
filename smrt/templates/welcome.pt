<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Simple Milestone Reporting Tool</h1>
            <br />
            <h2>Projects</h2>
            <h5 tal:condition="not:exist">No projects are currently configured. <a href="/add_project">Add one?</a></h5>
            <ul tal:condition="exist">
                <li tal:repeat="project_key projects"><a tal:define="project projects[project_key]" href="/${project.short_name}">${project.name}</a></li>
                <br />
                <li><a href="/add_project">Add Another Project</a></li>
            </ul>
        </div>
        
    </tal:block>
</tal:block>