<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Simple Milestone Reporting Tool</h1>
            <br />
            <h2>Projects</h2>
            <h5 tal:condition="not:exist">No projects are currently configured. <a href="/add_project">Add one?</a></h5>
            <ul tal:condition="exist">
                <li tal:repeat="project_key projects">
                    <tal:block tal:define="project projects[project_key]">
                        <a href="/${project.short_name}">${project.name}</a> [ <a href="/${project.short_name}/edit">Edit</a> / <a href="#" onclick="javascript:if(confirm('Are you sure you want to delete the milestone ${project.name}?'))window.location.href='/${project.short_name}/remove';">Remove</a> ]
                    </tal:block>
                </li>
                <br />
                <li><a href="/add_project">Add Another Project</a></li>
                <li><a href="/refresh">Refresh All Data</a></li>
            </ul>
        </div>
        
    </tal:block>
</tal:block>