<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Simple Milestone Reporting Tool</h1>
            <br />
            <h2>Projects</h2>
            <h5 tal:condition="not:exist">No projects found.</h5>
            <ul tal:condition="exist">
                <li tal:repeat="project_key projects">
                    <tal:block tal:define="project projects[project_key]">
                        <a href="/${project.__name__}">${project.title}</a>
                    </tal:block>
                </li>
                <br />
            </ul>
            <a href="/refresh">Refresh All Data</a>
        </div>
        
    </tal:block>
</tal:block>