<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Edit Milestone</h1>
            <br />
            <form class="form-horizontal" action="${editurl}?action=save" method="POST">
                
                <div class="control-group">
                    <label for="name" class="control-label">Milestone Name:</label>
                    <div class="controls">
                        <input type="text" name="name" id="name" placeholder="Milestone..." value="${milestone.name}" />
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="mile_id" class="control-label">Milestone ID:</label>
                    <div class="controls">
                        <input type="text" name="mile_id" id="mile_id" placeholder="Milestone ID..." value="${milestone.mile_id}" />
                    </div>
                </div>
                
                <a href="/${milestone.__parent__.short_name}" class="btn btn-danger">Cancel</a>
                <button type="submit" value="submit" class="btn btn-primary pull-right">Save Changes</button>
                
            </form>
        </div>
        
    </tal:block>
</tal:block>