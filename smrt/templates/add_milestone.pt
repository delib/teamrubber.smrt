<tal:block metal:use-macro="view.site_style">
    <tal:block metal:fill-slot="content">
    
        <div class="container centered">
            <h1>Add Milestone</h1>
            <br />
            <form class="form-horizontal" action="/add_milestone?action=add" method="POST">
                
                <div class="control-group">
                    <label for="name" class="control-label">Milestone Name:</label>
                    <div class="controls">
                        <input type="text" name="name" id="name" placeholder="Milestone..." />
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="mile_id" class="control-label">Milestone ID:</label>
                    <div class="controls">
                        <input type="text" name="mile_id" id="mile_id" placeholder="Milestone ID..." />
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="username" class="control-label">Login Username:</label>
                    <div class="controls">
                        <input type="text" name="username" id="username" placeholder="Username..." />
                    </div>
                </div>
                
                <div class="control-group">
                    <label for="password" class="control-label">Login Password:</label>
                    <div class="controls">
                        <input type="password" name="password" id="password" placeholder="&bull;&bull;&bull;&bull;&bull;&bull;" />
                    </div>
                </div>
                
                <button type="submit" value="submit" class="btn btn-primary pull-right"><i class="icon-plus-sign icon-white"></i> Add Milestone</button>
                
            </form>
        </div>
        
    </tal:block>
</tal:block>